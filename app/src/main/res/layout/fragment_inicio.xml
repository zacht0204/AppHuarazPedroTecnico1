<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:background="@color/accent_color"
    android:weightSum="1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/desc_prod"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="0dp"
            android:text=" UNA ATENCION PERSONALIZADA PARA EL CULTIVOS  DE TUS PLANTAS "
            android:textColor="@color/hintInfo"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            />

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/videoView" />



        <TextView

            android:id="@+id/desc_prodS"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="0dp"
            android:text=" * UN TECNICO DE PLANTAS ESTA A LA ESPERA DE SU CONSULTA Y TRATAMIENTO EXCLUSIVO DE SUS CULTIVOS * "
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/videoView"
            android:layout_alignStart="@+id/videoView"
            android:textColor="@color/estado"
            />








    </LinearLayout>




