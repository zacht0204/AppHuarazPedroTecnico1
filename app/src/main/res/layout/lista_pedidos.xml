            android:gravity="center"
            android:text="Provincia:"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/DNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="París"
            android:textSize="20sp"
            android:textColor="@color/evaluacion"/>
    </TableRow>


    <TableRow
        android:id="@+id/Fila8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/Anio8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Provincia:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="París"
            android:textSize="20sp"
            android:textColor="@color/evaluacion"/>
    </TableRow>

    <TableRow
        android:id="@+id/Fila4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/Anio4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Provincia:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="date"
            android:textSize="20sp"
            android:textColor="@color/evaluacion"/>
    </TableRow>





</TableLayout>